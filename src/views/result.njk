{% set title = 'Результат прохождения теста' %}
{% extends '_layout.njk' %}
{% block content %}
  <h1 class="title">{{ title }}</h1>
  <p>Попытка <b>#{{ resultId + 1 }}</b></p>
  <p>Дата завершения: <b>{{ result.date }}</b></p>

  <ul class="test">
  {% for question in questions %}
    <li class="test__item">
      <div class="test__question">{{ question.question }}</div>
      <p>Вы ответили: {{ result.result[question.id - 1] }}
      {% if question.answers[result.result[question.id - 1] - 1].correct %}
        ✔
      {% else %}
        ❌
      {% endif %}</p>
  {% endfor %}
  </ul>
{% endblock %}
